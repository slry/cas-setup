      taiga_directory: /cas/taiga
      taiga_path: /taiga

      logger_directory: /cas/logger
      logger_front_path: /dashboard-logger
      logger_back_path: /logger


      ##############################
      #
      # Backup settings
      #
      ##############################
      
      backup_directory: /cas/backup
      # Cron format
      backup_weekday: "6"
